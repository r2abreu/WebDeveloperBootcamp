<%- include('partials/header.ejs') %>

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= blog.title %> post </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label for="">Title</label>
            <input type="text" class="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label for="">Image</label>
            <input type="text" class="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label for="">Content</label>
            <textarea name="blog[body]" placeholder="Image"><%= blog.body %></textarea>
        </div>
        <input class="ui black button" type="submit" value="Submit">
    </form>
</div>




<%- include('partials/footer.ejs') %>